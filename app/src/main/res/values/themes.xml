<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ViolinTuner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/purple_200</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/purple_700</item>
        <item name="colorOnTertiaryContainer">@color/white</item>
        <!-- Error colors -->
        <item name="colorError">@color/red_600</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/red_300</item>
        <item name="colorOnErrorContainer">@color/black</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>
</resources>